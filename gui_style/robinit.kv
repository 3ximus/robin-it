#:kivy 1.8.0


#:set font 'gui_style/fonts/VertigoFLF.ttf'
#:set title_font 'gui_style/fonts/GatsbyFLF-Bold.ttf'
## --- other options ---
##:set title_font 'gui_style/fonts/TH3 MACHINE.ttf'
##:set font 'gui_style/fonts/Park Tech CG.ttf'
##:set font 'gui_style/fonts/Park Tech CG Light.ttf'

# -------------------
#    BACKGROUND
# -------------------
<BokehLight>:
	# Bokeh settings
	opacity: self._opacity
	canvas:
		Color:
			rgb: self.r_color
		Ellipse:
			size: self.r_width, self.r_height
			pos: self.pos
<Background>:
	# Background Color
	canvas:
		Color:
			rgb: 0.25, 0.25, 0.25
		Rectangle:
			size: self.size

# --------------------
# SCROOLLERS AND GRIDS 
# --------------------

<ItemScroller>:
	bar_color: 0.4, 0.8, 0.2, 1

# -------------------
# IMAGES AND BUTTONS
# -------------------

<ImageBanner>:
	size_hint_y: None
	height: 60

# General Green Button rule
<RButton@Button>:
	background_normal: ''
	background_disabled_down: ''
	background_color: 0.4, 0.8, 0.2, 1
	font_name: font

# Button rule definition
<MainMenuButton@RButton>:
	width: 170
	height: 90
	size_hint: None, None
	font_size: 60

# -------------------
#    MAIN SCREEN
# -------------------

<MainScreen>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Robin It'
			font_name: title_font
			font_size: 150
		BoxLayout:
			padding: [30, 70, 30, 70]
			spacing: 30
			# used to keep buttons in order
			Label:
			MainMenuButton:
				text: 'Movies'
				on_press: root.manager.current = 'movies_main_screen'
				disabled: True
			MainMenuButton:
				text: 'Shows'
				on_press:
					root.manager.transition.direction = 'up'
					root.manager.current = 'shows_main_screen'
			MainMenuButton
				text: 'Books'
				on_press: root.manager.current = 'books_main_screen'
				disabled: True
			MainMenuButton:
				text: 'Games'
				on_press: root.manager.current = 'games_main_screen'
				disabled: True
			# used to keep buttons in order
			Label:

# -------------------
#    SHOWS SCREEN
# -------------------

<ShowsMainScreen>:
	# Following TV Shows
	ItemScroller:
		size_hint_y: None
		height: self.parent.top - 200 # gets size of screen
		pos: 0, 100
		ShowsGrid:
			# Is inside an ItemScroller
			cols: 2
			spacing: 20
			size_hint_y: None
			#width: 500

	# Buttons
	FloatLayout:
		RButton:
			text: 'Back'
			font_size: 50
			on_press:
				root.manager.transition.direction = 'down'
				root.manager.current = 'main_screen'
			width: 100
			height: 60
			size_hint: None, None
			pos: 10, root.top - 70
		RButton:
			text: '+ Add'
			font_size: 50
			width: 120
			height: 60
			size_hint: None, None
			pos: 10, 10

# -------------------
#    MOVIES SCREEN
# -------------------

<MoviesMainScreen>:
	FloatLayout:

