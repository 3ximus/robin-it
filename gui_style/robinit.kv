#:kivy 1.8.0


#:set font 'gui_style/fonts/VertigoFLF.ttf'
#:set title_font 'gui_style/fonts/GatsbyFLF-Bold.ttf'

## --- other options ---
#:set machine_font 'gui_style/fonts/TH3 MACHINE.ttf'
#:set tech_font 'gui_style/fonts/Park Tech CG.ttf'
#:set Ltech_font 'gui_style/fonts/Park Tech CG Light.ttf'

#:set green_color 0.4, 0.8, 0.2, 1

# -------------------
#    MAIN SCREEN
# -------------------

<MainScreen>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Robin It'
			font_name: title_font
			font_size: 150
		BoxLayout:
			padding: [30, 70, 30, 70]
			spacing: 30
			# used to keep buttons in order
			Label:
			MainMenuButton:
				text: 'Movies'
				on_release:
					root.manager.transition.direction = 'right'
					root.manager.current = 'movies_main_screen'
				#disabled: True
			MainMenuButton:
				text: 'Shows'
				on_release:
					root.manager.transition.direction = 'up'
					root.manager.current = 'shows_main_screen'
			MainMenuButton
				text: 'Books'
				on_release: root.manager.current = 'books_main_screen'
				disabled: True
			MainMenuButton:
				text: 'Games'
				on_release: root.manager.current = 'games_main_screen'
				disabled: True
			# used to keep buttons in order
			Label:

# -------------------
#    SHOWS SCREEN
# -------------------

<ShowsMainScreen>:
	ThemeTitle:
		text: 'To Watch'
		pos: root.center_x, root.top - 90
	ThemeButton:
		text: 'Back'
		font_size: 50
		on_release:
			root.manager.transition.direction = 'down'
			root.manager.current = 'main_screen'
		size_hint: None, None
		width: 100
		height: 60
		pos: 10, root.top - 70
	ThemeButton:
		text: '+ Add'
		font_size: 50
		size_hint: None, None
		width: 120
		height: 60
		pos: 10, 10
	ThemeButton:
		text: 'All >>'
		font_size: 50
		on_release:
			root.manager.transition.direction = 'left'
			root.manager.current = 'all_shows_screen'
		size_hint: None, None
		width: 120
		height: 60
		pos: root.right - 130, root.top - 70

<AllShowsScreen>:
	Accordion:
		size_hint: None, None
		pos: 50, 100
		height: root.top - 200
		width: root.right - 100
		AccordionItem:
			title_template: 'CustomAccordionItem'
			background_normal: ''
			background_color: green_color
			title: 'Watched'
			ItemScroller:
				WatchedShowsVerticalGrid:
					cols: 3
					spacing: 5
					size_hint_y: None
		AccordionItem:
			title_template: 'CustomAccordionItem'
			background_normal: ''
			background_color: green_color
			title: 'Following'
			ItemScroller:
				FollowingShowsVerticalGrid:
					cols: 3
					spacing: 5
					size_hint_y: None
	ThemeTitle:
		text: 'All Shows'
		pos: root.center_x, root.top - 90
	ThemeButton:
		text: '<< Following'
		font_size: 50
		on_release:
			root.manager.transition.direction = 'right'
			root.manager.current = 'shows_main_screen'
		size_hint: None, None
		width: 160
		height: 60
		pos: 10, root.top - 70
	ThemeButton:
		text: '+ Add'
		font_size: 50
		size_hint: None, None
		width: 120
		height: 60
		pos: 10, 10

<ShowViewScreen>:
	ThemeButton:
		text: '<< All'
		font_size: 50
		on_release:
			root.manager.transition.direction = 'down'
			root.manager.current = 'all_shows_screen'
		size_hint: None, None
		width: 160
		height: 60
		pos: 10, root.top - 70

# -------------------
#    MOVIES SCREEN
# -------------------

<MoviesMainScreen>:
	ThemeTitle:
		text: 'Testing Area'
		pos: root.center_x, root.top - 90
	Carousel:
		ThemeButton:
			text: 'text'
			on_release: root.next_slide()
		ThemeButton:
			text: 'adsfas'
		ThemeButton:
			text: 'other text'

